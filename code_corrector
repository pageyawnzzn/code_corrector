    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const debugButton = document.getElementById('debug-btn');
            debugButton.addEventListener('click', () => {
                const codeInput = document.getElementById('code-input').value;
                // Add your code analysis logic here
const codeInput = document.getElementById('code-input');
const debugButton = document.getElementById('debug-btn');
const debugOutput = document.getElementById('output');

debugButton.addEventListener('click', async () => {
    const code = codeInput.value;
    debugOutput.innerText = 'Analyzing...'; // Loading state

    try {
        const response = await fetch('/debug', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ code }),
        });

        if (!response.ok) {
            throw new Error('Network response was not ok');
        }

        const result = await response.json();
        debugOutput.innerText = result.message;

    } catch (error) {
        debugOutput.innerText = `Error: ${error.message}`;
    }
});

                document.getElementById('output').innerText = 'Code analysis results will be displayed here.';
            });
        });
    </script>
